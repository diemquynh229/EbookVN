<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE8CD"
    tools:context=".BookLibraryActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="681dp"
        android:background="#BEF3C0"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="Book Library"
            android:textColor="#0A530D"
            android:textSize="50dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/freeBook"
        android:layout_width="153dp"
        android:layout_height="150dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="129dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/freebook" />

    <ImageView
        android:id="@+id/paidBook"
        android:layout_width="156dp"
        android:layout_height="142dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="129dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/paybook" />

    <TextView
        android:textColor="#2A4A04"
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginEnd="146dp"
        android:fontFamily="monospace"
        android:text="Free Book"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/freeBook" />

    <TextView
        android:textColor="#2A4A04"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginEnd="146dp"
        android:layout_marginBottom="158dp"
        android:textSize="21dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:text="Paid Book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paidBook" />


</androidx.constraintlayout.widget.ConstraintLayout>