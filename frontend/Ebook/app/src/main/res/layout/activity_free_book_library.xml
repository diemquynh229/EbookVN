<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECE8CD"
    tools:context=".FreeBookLibraryActivity">


    <LinearLayout
        android:background="#BEF3C0"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:background="#94E497"
            android:id="@+id/backButtonFreeBook"
            android:layout_width="59dp"
            android:layout_height="70dp"
            android:src="@drawable/backicon"></ImageView>

        <TextView
            android:layout_width="357dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="casual"
            android:text="Free Book Library"
            android:textColor="#0A530D"
            android:textSize="40dp"
            android:textStyle="bold"></TextView>
    </LinearLayout>


    <ImageView
        android:background="#40FF5722"
        android:id="@+id/HTMLBook"
        android:layout_width="188dp"
        android:layout_height="228dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/bookcover"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/TrainBook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:textSize="15dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="35dp"
        android:text="HTML vÃ  AWP"
        android:fontFamily="casual"
        android:textColor="#0A530D"
        app:layout_constraintBottom_toTopOf="@+id/ChuanDoanVaSuaChua"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HTMLBook"></TextView>

    <ImageView
        android:background="#40FF5722"
        android:id="@+id/ChuanDoanVaSuaChua"
        android:layout_width="188dp"
        android:layout_height="228dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="216dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/book"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:textSize="15dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="231dp"
        android:layout_marginBottom="61dp"
        android:fontFamily="casual"
        android:text="Chuan doan va Sua Chua"
        android:textColor="#0A530D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChuanDoanVaSuaChua"></TextView>

    <ImageView
        android:id="@+id/TrainBook"
        android:layout_width="188dp"
        android:layout_height="228dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="7dp"
        android:background="#40FF5722"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/HTMLBook"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/trainbook" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="388dp"
        android:fontFamily="casual"
        android:text="Tia Portal Programming"
        android:textColor="#0A530D"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/TrainBook"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>